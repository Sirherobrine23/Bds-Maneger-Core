{
  "include": ["src/"],
  "exclude": [
    "node_modules/",
    "test/"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist/cjs",
    "declaration": true,
    "declarationDir": "./dist/dts",
    "strict": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowJs": true,
    "target": "ES6",
    "paths": {
      "@/*": ["./node_modules/@*"]
    }
  }
}
