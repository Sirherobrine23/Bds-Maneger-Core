{
  "name": "@the-bds-maneger/core",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "2.0.0",
  "description": "A very simple way to manage Minecraft servers",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "exports": {
    "require": "./dist/src/index.js",
    "import": "./dist/esm/index.js"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "run-s build:*",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module es2020 --outDir dist/esm"
  },
  "nodemonConfig": {
    "delay": 2500,
    "ext": "json,js,ts",
    "ignore": [
      "test/*"
    ],
    "watch": [
      "src",
      "bin",
      "package.json",
      "package-lock.json"
    ],
    "exec": "npm run build:cjs && node --trace-warnings ./dist/cjs/bin/index.js start --api 3000"
  },
  "bin": {
    "bds_maneger": "dist/cjs/bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/The-Bds-Maneger/Bds-Maneger-Core.git"
  },
  "keywords": [
    "minecraft",
    "bds",
    "bds-server",
    "bedrock",
    "java",
    "pocketmine",
    "server_mode",
    "rest",
    "typescript"
  ],
  "author": "Sirherobrine23",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/The-Bds-Maneger/Bds-Maneger-Core/issues/new"
  },
  "homepage": "https://docs.bdsmaneger.com/Bds Maneger core",
  "engines": {
    "node": ">=15.6.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32",
    "android"
  ],
  "dependencies": {
    "adm-zip": "^0.5.9",
    "axios": "^0.26.1",
    "cli-color": "^2.0.2",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "cron-validator": "^1.3.1",
    "express": "^4.17.3",
    "prismarine-nbt": "^2.2.1",
    "properties-to-json": "^0.2.1",
    "tar": "^6.1.11",
    "typescript": "^4.6.3",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/cli-color": "^2.0.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.22",
    "@types/tar": "^6.1.1",
    "@types/yargs": "^17.0.10",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5"
  }
}
