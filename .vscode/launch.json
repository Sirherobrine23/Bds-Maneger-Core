{
	"version": "0.2.0",
	"configurations": [
    {
      "type": "node",
      "name": "Current file",
      "internalConsoleOptions": "openOnSessionStart",
      "request": "launch",
      "args": [
        "-r", "ts-node/register",
        "${file}"
      ],
    },
    {
      "type": "node",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js",
      "internalConsoleOptions": "openOnSessionStart",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "args": [
        "-r", "ts-node/register",
        "--colors",
        "${workspaceFolder}/tests/**/*.ts"
      ],
    },
	]
}
